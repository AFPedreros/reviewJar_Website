---
import { Image } from "astro:assets"

import automatedInteractions from "@/assets/automate-actions/automated-interactions.webp"
import channelConversations from "@/assets/automate-actions/channel-conversations.webp"
import programmableResponses from "@/assets/automate-actions/programmable-responses.webp"
---

<section class="flex w-full pb-12 lg:pt-[6.25rem] lg:pb-20">
	<div class="container mx-auto flex items-center gap-6 px-4 text-white lg:max-w-7xl">
		<div
			class="relative aspect-square w-1/3 overflow-hidden rounded-4xl shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]"
		>
			<Image src={programmableResponses} alt="ToDo" class="absolute inset-0 h-full object-cover" />
			<div class="absolute inset-0 bg-[#FF79AE]/30"></div>
			<h3 class="absolute bottom-8 left-8 text-2xl leading-tight md:text-3xl lg:text-4xl">
				<span>Programmable</span>
				<br />
				<span class="font-black">Responses</span>
			</h3>
		</div>

		<div
			class="relative aspect-square w-1/3 -translate-y-5 overflow-hidden rounded-4xl shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]"
		>
			<Image src={channelConversations} alt="ToDo" class="absolute inset-0 h-full object-cover" />
			<div class="absolute inset-0 bg-[#FF79AE]/30"></div>
			<h3 class="absolute bottom-8 left-8 text-2xl leading-tight md:text-3xl lg:text-4xl">
				<span>Channel</span>
				<br />
				<span class="font-black">Conversations </span>
			</h3>
		</div>

		<div
			class="relative aspect-square w-1/3 overflow-hidden rounded-4xl shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]"
		>
			<Image src={automatedInteractions} alt="ToDo" class="absolute inset-0 h-full object-cover" />
			<div class="absolute inset-0 bg-[#FF79AE]/30"></div>
			<h3 class="absolute bottom-8 left-8 text-2xl leading-tight md:text-3xl lg:text-4xl">
				<span>Automated</span>
				<br />
				<span class="font-black">Interactions</span>
			</h3>
		</div>
	</div>
</section>
