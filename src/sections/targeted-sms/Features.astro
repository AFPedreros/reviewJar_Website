---
import { Image } from "astro:assets"

import automatedMessaging from "@/assets/targeted-sms/automated-messaging.webp"
import cvsUpload from "@/assets/targeted-sms/cvs-upload.webp"
import personalizedOutreach from "@/assets/targeted-sms/personalized-outreach.webp"
---

<section class="flex w-full pb-12 lg:pt-[6.25rem] lg:pb-20">
	<div class="container mx-auto flex items-center gap-6 px-4 text-white lg:max-w-7xl">
		<div
			class="relative aspect-square w-1/3 overflow-hidden rounded-4xl shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]"
		>
			<Image src={cvsUpload} alt="ToDo" class="absolute inset-0 h-full object-cover" />
			<div class="bg-primary/30 absolute inset-0"></div>
			<h3 class="absolute bottom-8 left-8 text-2xl leading-tight md:text-3xl lg:text-4xl">
				<span>CSV-</span>
				<br />
				<span class="font-black">Upload</span>
			</h3>
		</div>

		<div
			class="relative aspect-square w-1/3 -translate-y-5 overflow-hidden rounded-4xl shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]"
		>
			<Image src={personalizedOutreach} alt="ToDo" class="absolute inset-0 h-full object-cover" />
			<div class="bg-primary/30 absolute inset-0"></div>
			<h3 class="absolute bottom-8 left-8 text-2xl leading-tight md:text-3xl lg:text-4xl">
				<span>Personalized</span>
				<br />
				<span class="font-black">Outreach</span>
			</h3>
		</div>

		<div
			class="relative aspect-square w-1/3 overflow-hidden rounded-4xl shadow-[0px_4px_4px_0px_rgba(0,0,0,0.25)]"
		>
			<Image src={automatedMessaging} alt="ToDo" class="absolute inset-0 h-full object-cover" />
			<div class="bg-primary/30 absolute inset-0"></div>
			<h3 class="absolute bottom-8 left-8 text-2xl leading-tight md:text-3xl lg:text-4xl">
				<span>Automated</span>
				<br />
				<span class="font-black">Messaging</span>
			</h3>
		</div>
	</div>
</section>
